{
  "manifest_version": 3,
  "name": "sample",
  "version": "1.0",
  "description": "複数のWebサイトのお問い合わせフォームに自動で情報を入力し送信します",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://mqibubhzyvlprhekdjvf.supabase.co/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/ポチレターアイコン16.png",
      "48": "assets/icons/ポチレターアイコン48.png",
      "128": "assets/icons/ポチレターアイコン128.png"
    }
  },
  "icons": {
    "16": "assets/icons/ポチレターアイコン16.png",
    "48": "assets/icons/ポチレターアイコン48.png",
    "128": "assets/icons/ポチレターアイコン128.png"
  }
}
